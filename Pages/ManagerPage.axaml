<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

			 x:Class="AntiqueShopAvalonia.ManagerPage"
			 mc:Ignorable="d" Width="1400" Height="900">
	<Grid>
		<TabControl TabStripPlacement="Left">
			<TabItem>
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="🏠" FontSize="20"/>
						<TextBlock Text="Главная" FontSize="16" VerticalAlignment="Center"/>
					</StackPanel>
				</TabItem.Header>
				<StackPanel Background="#F8F9FA" Margin="20">
					<Border Background="White" CornerRadius="12" Padding="40" Margin="0,100,0,0" BorderBrush="#004E89" BorderThickness="2">
						<StackPanel Spacing="20" HorizontalAlignment="Center">
							<TextBlock Text="🏪 Комиссионный магазин" 
									   TextWrapping="Wrap" 
									   FontWeight="Bold" 
									   Foreground="#004E89" 
									   FontSize="36" 
									   HorizontalAlignment="Center" 
									   TextAlignment="Center"/>
							<TextBlock Text="Добро пожаловать в систему управления!" 
									   TextWrapping="Wrap" 
									   Foreground="#666666" 
									   FontSize="16" 
									   HorizontalAlignment="Center" 
									   TextAlignment="Center"/>
							<StackPanel Orientation="Horizontal" Spacing="20" HorizontalAlignment="Center" Margin="0,20,0,0">
								<Border Background="#FF6B35" CornerRadius="8" Padding="20">
									<StackPanel Spacing="5" HorizontalAlignment="Center">
										<TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center"/>
										<TextBlock Text="Работники" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
									</StackPanel>
								</Border>
								<Border Background="#004E89" CornerRadius="8" Padding="20">
									<StackPanel Spacing="5" HorizontalAlignment="Center">
										<TextBlock Text="📦" FontSize="32" HorizontalAlignment="Center"/>
										<TextBlock Text="Товары" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
									</StackPanel>
								</Border>
								<Border Background="#27AE60" CornerRadius="8" Padding="20">
									<StackPanel Spacing="5" HorizontalAlignment="Center">
										<TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center"/>
										<TextBlock Text="Продажи" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
									</StackPanel>
								</Border>
								<Border Background="#E74C3C" CornerRadius="8" Padding="20">
									<StackPanel Spacing="5" HorizontalAlignment="Center">
										<TextBlock Text="↩️" FontSize="32" HorizontalAlignment="Center"/>
										<TextBlock Text="Возвраты" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
									</StackPanel>
								</Border>
							</StackPanel>
						</StackPanel>
					</Border>
				</StackPanel>
			</TabItem>

			<TabItem>
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="👤" FontSize="20"/>
						<TextBlock Text="Работники" FontSize="16" VerticalAlignment="Center"/>
					</StackPanel>
				</TabItem.Header>
				<ContentControl x:Name="UsersTabContent"/>
			</TabItem>
			<TabItem>
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="📦" FontSize="20"/>
						<TextBlock Text="Товары" FontSize="16" VerticalAlignment="Center"/>
					</StackPanel>
				</TabItem.Header>
				<ContentControl x:Name="ProductsTabContent"/>
			</TabItem>

			<TabItem>
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="💰" FontSize="20"/>
						<TextBlock Text="Продажи" FontSize="16" VerticalAlignment="Center"/>
					</StackPanel>
				</TabItem.Header>
				<ContentControl x:Name="SalesTabContent"/>
			</TabItem>

			<TabItem>
				<TabItem.Header>
					<StackPanel Orientation="Horizontal" Spacing="8">
						<TextBlock Text="↩️" FontSize="20"/>
						<TextBlock Text="Возвраты" FontSize="16" VerticalAlignment="Center"/>
					</StackPanel>
				</TabItem.Header>
				<ContentControl x:Name="ReturnsTabContent"/>
			</TabItem>
		</TabControl>
		<Button x:Name="QuitBtn"
				HorizontalAlignment="Left"
				Margin="14,799,0,0"
				VerticalAlignment="Top"
				Width="58"
				Height="50"
				Click="QuitBtn_Click"
				Content="🚪"
				Classes="DangerButton"
				ToolTip.Tip="Выход из системы"/>
	</Grid>
</UserControl>
