<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:model="clr-namespace:AntiqueShopAvalonia.Model;assembly=AntiqueShopAvalonia"
			 x:Class="AntiqueShopAvalonia.Pages.AdminPage.AdminTabs.ProductsTab"
			 mc:Ignorable="d">
	<StackPanel Background="White" Margin="15">
		<StackPanel Margin="0,0,0,20">
			<TextBox Name="ProductsSearchText"
					 Watermark="Введите данные о товаре"
					 FontSize="16"
					 Width="600"
					 Margin="0,25,0,0"
					 TextChanged="ProductsSearchText_TextChanged"/>
		</StackPanel>

		<DataGrid Name="ProductsList"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  Height="624"
				  Margin="0,25,0,0">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
				<DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
				<DataGridTextColumn Header="Категория" Binding="{Binding Category.Name}" Width="150"/>
				<DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
				<DataGridTextColumn Header="Доля магазина" Binding="{Binding ShopShare}" Width="100"/>
				<DataGridTextColumn Header="Дата приема" Binding="{Binding ReceiptDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="120"/>
				<DataGridTextColumn Header="Срок хранения" Binding="{Binding StoragePeriod}" Width="120"/>
				<DataGridTextColumn Header="Статус" Binding="{Binding Status.Name}" Width="120"/>
				<DataGridTemplateColumn Header="Действия" Width="350">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate x:DataType="model:Product">
							<StackPanel Orientation="Horizontal" Spacing="5">
								<Button Content="Редактировать" Tag="{Binding}" Click="EditProduct_Click"/>
								<Button Content="Удалить" Tag="{Binding}" Click="DeleteProduct_Click"/>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
			<TextBlock Name="ProductsCountText" Text="Всего товаров: " Margin="0,4,0,0" VerticalAlignment="Center"/>
			<StackPanel Orientation="Horizontal" Spacing="10" Margin="350,0,0,0">
				<Button Name="PrintSinglePriceTagBtn" Content="Печать ценника" Margin="5" Click="PrintSinglePriceTagBtn_Click"/>
				<Button Name="PrintAllPriceTagsBtn" Content="Печать всех ценников" Margin="5" Click="PrintAllPriceTagsBtn_Click"/>
				<Button Name="DeleteProductBtn" Content="Удалить товар" Margin="5" Click="DeleteProductBtn_Click"/>
				<Button Name="EditProductBtn" Content="Редактировать товар" Margin="5" Click="EditProductBtn_Click"/>
				<Button Name="AddProductBtn" Content="Добавить товар" Margin="5" Click="AddProductBtn_Click"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>

