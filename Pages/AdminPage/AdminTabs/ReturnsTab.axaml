<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:model="clr-namespace:AntiqueShopAvalonia.Model;assembly=AntiqueShopAvalonia"
			 x:Class="AntiqueShopAvalonia.Pages.AdminPage.AdminTabs.ReturnsTab"
			 mc:Ignorable="d">
	<StackPanel Background="White" Margin="15">
		<StackPanel Margin="0,0,0,20">
			<TextBox Name="ReturnsSearchText"
					 Watermark="Введите данные о возврате"
					 FontSize="16"
					 Width="600"
					 Margin="0,25,0,0"
					 TextChanged="ReturnsSearchText_TextChanged"/>
		</StackPanel>

		<DataGrid Name="ReturnsList"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  Height="624"
				  Margin="0,25,0,0">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
				<DataGridTextColumn Header="Товар" Binding="{Binding Product.Name}" Width="200"/>
				<DataGridTextColumn Header="Дата возврата" Binding="{Binding ReturnDate, StringFormat='{}{0:dd.MM.yyyy}'}" Width="120"/>
				<DataGridTextColumn Header="Тип возврата" Binding="{Binding ReturnType.Name}" Width="150"/>
				<DataGridTextColumn Header="Причина" Binding="{Binding Reason}" Width="300"/>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
			<TextBlock Name="ReturnsCountText" Text="Всего возвратов: " Margin="0,4,0,0" VerticalAlignment="Center"/>
			<StackPanel Orientation="Horizontal" Spacing="10" Margin="730,0,0,0">
				<Button Name="PrintReturnActBtn" Content="Печать акта" Margin="5" Click="PrintReturnActBtn_Click"/>
				<Button Name="CheckProductsBtn" Content="Проверить товары" Margin="5" Click="CheckProductsBtn_Click"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>

