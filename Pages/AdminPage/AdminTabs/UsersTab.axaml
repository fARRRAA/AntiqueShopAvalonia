<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:model="clr-namespace:AntiqueShopAvalonia.Model;assembly=AntiqueShopAvalonia"
			 x:Class="AntiqueShopAvalonia.Pages.AdminPage.AdminTabs.UsersTab"
			 mc:Ignorable="d">

	<StackPanel Background="White" Margin="15">
		<StackPanel Margin="0,0,0,20">
			<TextBox Name="UsersSearchText"
					 Watermark="Введите данные о работнике"
					 FontSize="16"
					 Width="600"
					 Margin="0,25,0,0"
					 TextChanged="UsersSearchText_TextChanged"/>
		</StackPanel>

		<DataGrid Name="UsersList"
				  AutoGenerateColumns="False"
				  IsReadOnly="True"
				  Height="624"
				  Margin="0,25,0,0">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
				<DataGridTextColumn Header="Фамилия" Binding="{Binding Lname}" Width="200"/>
				<DataGridTextColumn Header="Имя" Binding="{Binding Fname}" Width="150"/>
				<DataGridTextColumn Header="Отчество" Binding="{Binding Patronymic}" Width="150"/>
				<DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="130"/>
				<DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
				<DataGridTextColumn Header="Роль" Binding="{Binding Role.Name}" Width="120"/>
				<DataGridCheckBoxColumn Header="Активен" Binding="{Binding IsActive}" Width="100"/>

				<DataGridTemplateColumn Header="Действия" Width="350">
					<DataGridTemplateColumn.CellTemplate>
						<DataTemplate x:DataType="model:User">
							<StackPanel Orientation="Horizontal" Spacing="5">
								<Button Content="Редактировать" Tag="{Binding}" Click="EditUser_Click"/>
								<Button Content="Удалить" Tag="{Binding}" Click="DeleteUser_Click"/>
							</StackPanel>
						</DataTemplate>
					</DataGridTemplateColumn.CellTemplate>
				</DataGridTemplateColumn>
			</DataGrid.Columns>
		</DataGrid>

		<StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
			<TextBlock Name="UsersCountText" Text="Всего работников: " Margin="0,4,0,0" VerticalAlignment="Center"/>

			<StackPanel Orientation="Horizontal" Spacing="10" Margin="450,0,0,0">
				<Button Name="DeleteUserBtn" Content="Удалить работника" Margin="5" Click="DeleteUserBtn_Click"/>
				<Button Name="EditUserBtn" Content="Редактировать работника" Margin="5" Click="EditUserBtn_Click"/>
				<Button Name="AddUserBtn" Content="Добавить работника" Margin="5" Click="AddUserBtn_Click"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>