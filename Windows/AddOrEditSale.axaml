<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:model="clr-namespace:AntiqueShopAvalonia.Model;assembly=AntiqueShopAvalonia"
		mc:Ignorable="d"
		x:Class="AntiqueShopAvalonia.Windows.AddOrEditSale"
		Title="Добавление/Редактирование продажи"
		Width="600" Height="550"
		WindowStartupLocation="CenterOwner">
	<StackPanel Margin="30" Spacing="15">
		<TextBlock Text="Товар" FontSize="16"/>
		<ComboBox x:Name="ProductComboBox" 
				  FontSize="16" 
				  Height="40"
				  SelectionChanged="ProductComboBox_SelectionChanged">
			<ComboBox.ItemTemplate>
				<DataTemplate x:DataType="model:Product">
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Клиент" FontSize="16"/>
		<ComboBox x:Name="ClientComboBox" 
				  FontSize="16" 
				  Height="40">
			<ComboBox.ItemTemplate>
				<DataTemplate x:DataType="model:Client">
					<TextBlock>
						<Run Text="{Binding Fname}"/>
						<Run Text=" "/>
						<Run Text="{Binding Lname}"/>
					</TextBlock>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Способ оплаты" FontSize="16"/>
		<ComboBox x:Name="PaymentMethodComboBox" 
				  FontSize="16" 
				  Height="40">
			<ComboBox.ItemTemplate>
				<DataTemplate x:DataType="model:PaymentMethod">
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>

		<TextBlock Text="Информация о продаже:" 
				   Foreground="DarkOrange" 
				   FontSize="16" 
				   Margin="0,10,0,0"/>

		<StackPanel Margin="0,10,0,10" Spacing="10">
			<TextBlock x:Name="PriceText" Text="Цена: " FontSize="14"/>
			<TextBlock x:Name="ShopShareText" Text="Доля магазина: " FontSize="14"/>
			<TextBlock x:Name="ClientPayoutText" Text="Выплата клиенту: " FontSize="14"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" 
					HorizontalAlignment="Right" 
					Spacing="10" 
					Margin="0,20,0,0">
			<Button Name="CancelBtn" Content="Отмена" Width="100" Click="CancelBtn_Click"/>
			<Button Name="ConfirmBtn" Content="Подтвердить" Width="100" Click="ConfirmBtn_Click"/>
		</StackPanel>
	</StackPanel>
</Window>

